<!doctype html>
<html lang='en'>
<head>
<meta charset='utf-8'>
<meta name='viewport' content='width=device-width, initial-scale=1'>
<title>{{ title }}</title>
<style>
:root {
  --bg: #f4f7fb;
  --panel: #ffffff;
  --ink: #13202d;
  --subtle: #4e6172;
  --border: #d7e0ea;
  --add-bg: #e9f7ef;
  --add-ink: #185f39;
  --del-bg: #fdeeee;
  --del-ink: #81252e;
  --comment-bg: #f8f4df;
  --comment-ink: #5b4a13;
}
* { box-sizing: border-box; }
body {
  margin: 0;
  font-family: "IBM Plex Sans", "Segoe UI", sans-serif;
  color: var(--ink);
  background: radial-gradient(circle at 15% 15%, #ffffff, var(--bg) 45%, #e9eef4);
}
main {
  max-width: 1360px;
  margin: 0 auto;
  padding: 1.25rem;
}
.layout {
  display: grid;
  grid-template-columns: minmax(0, 1fr) 18.5rem;
  gap: 1.25rem;
  align-items: start;
}
.content {
  min-width: 0;
}
header {
  background: linear-gradient(125deg, #fefefe, #e7eef7);
  border: 1px solid var(--border);
  border-radius: 14px;
  padding: 1rem;
  margin-bottom: 1rem;
}
.headline-stats {
  margin: 0.2rem 0 0;
  font-size: 0.8rem;
  color: var(--subtle);
}
.overview {
  margin-top: 0.85rem;
  border: 1px solid var(--border);
  border-radius: 10px;
  background: #fff;
  padding: 0.65rem 0.85rem;
}
.overview h2 {
  margin: 0;
  font-size: 0.95rem;
}
.overview ul {
  margin: 0.35rem 0 0;
  padding-left: 1.15rem;
}
.validation {
  margin-top: 0.8rem;
  border: 1px solid var(--border);
  border-radius: 10px;
  background: #fff;
  padding: 0.6rem 0.8rem;
}
.validation ul {
  margin: 0.35rem 0 0;
  padding-left: 1.1rem;
}
.toc {
  position: sticky;
  top: 0.9rem;
  max-height: calc(100vh - 1.8rem);
  overflow: auto;
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 0.72rem;
  background: linear-gradient(180deg, #ffffff, #f5f8fc);
  box-shadow: 0 3px 9px rgba(17, 36, 56, 0.06);
}
.toc-title {
  margin: 0 0 0.45rem;
  font-size: 0.78rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: #57708a;
}
.toc-list,
.toc-sublist {
  list-style: none;
  margin: 0;
  padding: 0;
}
.toc-item + .toc-item {
  margin-top: 0.4rem;
}
.toc-sublist {
  margin-top: 0.2rem;
}
.toc-link {
  display: block;
  text-decoration: none;
  color: inherit;
  border: 1px solid transparent;
  border-radius: 8px;
  padding: 0.18rem 0.35rem;
}
.toc-file-link {
  font-family: "IBM Plex Mono", "Consolas", monospace;
  font-size: 0.76rem;
  color: #173452;
  word-break: break-word;
}
.toc-hunk-link {
  margin-left: 0.6rem;
  font-size: 0.77rem;
  color: #45607a;
}
.toc-link.is-active {
  background: #e7f0fb;
  border-color: #b0c3d8;
  color: #0f2b46;
  font-weight: 600;
}
.reviewer-panel {
  margin-top: 0.8rem;
  border-top: 1px solid var(--border);
  padding-top: 0.75rem;
}
.reviewer-hint {
  margin: 0.15rem 0 0.55rem;
  color: #4f6479;
  font-size: 0.78rem;
  line-height: 1.4;
}
.comment-actions {
  display: flex;
  gap: 0.35rem;
  margin-bottom: 0.4rem;
}
.comment-actions button {
  border: 1px solid #b5c4d5;
  border-radius: 7px;
  background: #fff;
  color: #18334d;
  font-size: 0.74rem;
  padding: 0.22rem 0.45rem;
  cursor: pointer;
}
.comment-actions button:hover {
  background: #edf3fb;
}
.copy-status {
  margin: 0;
  min-height: 1rem;
  color: #45607a;
  font-size: 0.72rem;
}
.reviewer-comment-list {
  margin: 0.5rem 0 0;
  padding-left: 1.05rem;
}
.reviewer-empty {
  color: #5a7086;
  font-size: 0.78rem;
}
.reviewer-comment-item {
  margin-bottom: 0.55rem;
}
.reviewer-comment-meta {
  color: #38526c;
  font-family: "IBM Plex Mono", "Consolas", monospace;
  font-size: 0.7rem;
  line-height: 1.35;
}
.reviewer-comment-text {
  color: #10273d;
  margin-top: 0.18rem;
  font-size: 0.79rem;
  line-height: 1.35;
  white-space: pre-wrap;
}
.reviewer-comment-remove {
  margin-top: 0.2rem;
  border: 1px solid #cfdae6;
  border-radius: 6px;
  background: #f8fbff;
  color: #36516b;
  font-size: 0.7rem;
  padding: 0.15rem 0.35rem;
  cursor: pointer;
}
.reviewer-comment-remove:hover {
  background: #edf3fb;
}
.files {
  display: grid;
  gap: 1.25rem;
}
.toc-target {
  scroll-margin-top: 0.95rem;
}
.file {
  background: var(--panel);
  border: 1px solid #c4d2e2;
  border-radius: 14px;
  overflow: hidden;
  box-shadow: 0 3px 10px rgba(17, 36, 56, 0.06);
}
.file-header {
  list-style: none;
  padding: 0.95rem;
  background: linear-gradient(180deg, #fcfeff, #f2f7fc);
  cursor: pointer;
}
.file-header::-webkit-details-marker {
  display: none;
}
.file-header::marker {
  content: "";
}
.file-title-row {
  display: flex;
  align-items: flex-start;
  gap: 0.6rem;
}
.file-toggle {
  margin-top: 0.16rem;
  color: #3f6285;
  font-size: 0.8rem;
  line-height: 1;
  transform: rotate(0deg);
  transition: transform 130ms ease;
}
.file:not([open]) > .file-header .file-toggle {
  transform: rotate(-90deg);
}
.file-path {
  flex: 1;
  min-width: 0;
}
.file[open] > .file-header {
  border-bottom: 1px solid var(--border);
}
.file-body > .hunk:first-child {
  border-top: none;
}
.file-dir {
  font-family: "IBM Plex Mono", "Consolas", monospace;
  font-size: 0.76rem;
  color: #597087;
  margin-bottom: 0.2rem;
}
.file-name {
  font-family: "IBM Plex Mono", "Consolas", monospace;
  font-size: 1.08rem;
  font-weight: 700;
  letter-spacing: 0.01em;
}
.summary {
  color: #4f3206;
  margin-top: 0.5rem;
  font-size: 0.95rem;
  line-height: 1.45;
  border: 1px solid #e6d8b8;
  border-top: 3px solid #be8b33;
  background: #fff8ea;
  border-radius: 8px;
  padding: 0.48rem 0.66rem;
}
.status {
  margin-left: auto;
  font-size: 0.8rem;
  border: 1px solid var(--border);
  border-radius: 999px;
  padding: 0.1rem 0.5rem;
  text-transform: uppercase;
  white-space: nowrap;
}
.hunk {
  border-top: 1px solid var(--border);
}
.hunk > summary {
  padding: 0.55rem 0.8rem;
  cursor: pointer;
  font-family: "IBM Plex Mono", "Consolas", monospace;
  background: #f7faff;
  display: flex;
  justify-content: space-between;
  gap: 0.8rem;
  align-items: baseline;
}
.hunk-summary-meta {
  font-size: 0.75rem;
  color: var(--subtle);
}
.hunk-notes {
  margin: 0.5rem 0.65rem 0.35rem;
  border-left: 5px solid #5f89bf;
  background: #edf5ff;
  padding: 0.5rem 0.7rem;
  border-radius: 6px;
  box-shadow: inset 0 0 0 1px #d2e0f0;
}
.hunk-note-row {
  margin: 0.2rem 0;
  font-size: 0.9rem;
  color: #132536;
  line-height: 1.4;
}
.hunk-note-row strong {
  color: #102b46;
}
.diff-scroll {
  max-height: min(70vh, 44rem);
  overflow-y: auto;
  overflow-x: auto;
}
.diff-table {
  width: 100%;
  border-collapse: collapse;
}
.diff-table td {
  vertical-align: top;
  padding: 0.15rem 0.45rem;
  border-top: 1px solid #eef3f8;
  font-family: "IBM Plex Mono", "Consolas", monospace;
  font-size: 0.86rem;
}
.diff-table td.code {
  white-space: pre;
  tab-size: 4;
}
.diff-prefix {
  display: inline-block;
  width: 1ch;
}
.diff-table .num {
  width: 2.2rem;
  text-align: right;
  color: #8ea0b1;
  font-size: 0.72rem;
  font-weight: 400;
  user-select: none;
}
.line-row td.num {
  cursor: pointer;
}
.line-row td.num:hover {
  background: #e9f2fe;
  color: #33516f;
}
.line-row.has-reviewer-comment td.num {
  color: #14395c;
  font-weight: 700;
}
.reviewer-editor-row td {
  background: #f5f9ff;
  padding: 0.38rem 0.5rem 0.5rem;
}
.reviewer-editor {
  border: 1px solid #c8d8ea;
  border-radius: 8px;
  background: #fff;
  padding: 0.45rem;
}
.reviewer-editor-meta {
  margin: 0 0 0.3rem;
  color: #3e5a76;
  font-family: "IBM Plex Mono", "Consolas", monospace;
  font-size: 0.7rem;
}
.reviewer-editor textarea {
  width: 100%;
  min-height: 4.25rem;
  border: 1px solid #bdd0e5;
  border-radius: 6px;
  padding: 0.35rem 0.45rem;
  font-family: "IBM Plex Sans", "Segoe UI", sans-serif;
  font-size: 0.86rem;
  color: #17324c;
  resize: vertical;
}
.reviewer-editor-actions {
  display: flex;
  gap: 0.35rem;
  margin-top: 0.35rem;
}
.reviewer-editor-actions button {
  border: 1px solid #b8c8da;
  border-radius: 6px;
  background: #fff;
  color: #1b3a57;
  font-size: 0.74rem;
  padding: 0.18rem 0.45rem;
  cursor: pointer;
}
.reviewer-editor-actions button:hover {
  background: #edf3fb;
}
.line-add td { background: var(--add-bg); color: var(--add-ink); }
.line-del td { background: var(--del-bg); color: var(--del-ink); }
.comment-row td {
  background: #fffdf4;
  border-top: none;
  padding: 0.35rem 0.55rem 0.55rem;
}
.comment {
  border: 1px solid #e6dcaa;
  background: var(--comment-bg);
  color: var(--comment-ink);
  border-radius: 8px;
  padding: 0.35rem 0.5rem;
  margin-top: 0.2rem;
}
.comment-meta {
  font-size: 0.7rem;
  text-transform: uppercase;
  letter-spacing: 0.03em;
  opacity: 0.95;
  margin-bottom: 0.2rem;
}
.comment-severity-warning { color: #8f4b08; }
.comment-severity-risk { color: #7a1d1d; }
.comment-severity-note,
.comment-severity-info { color: #5b4a13; }
@media (max-width: 980px) {
  .layout {
    grid-template-columns: 1fr;
  }
  .toc {
    position: static;
    max-height: none;
  }
}
@media (max-width: 700px) {
  main { padding: 0.8rem; }
  .diff-table td { font-size: 0.8rem; }
}
</style>
</head>
<body>
<main>
<div class='layout'>
<div class='content'>
<header>
<h1>{{ title }}</h1>
<p class='headline-stats'>{{ files_changed }} files · +{{ additions }} · -{{ deletions }} · {{ error_count }} errors, {{ warning_count }} warnings</p>
{% if overview_lines %}
<section class='overview'>
<h2>Review Overview</h2>
<ul>
{% for line in overview_lines %}
<li>{{ line }}</li>
{% endfor %}
</ul>
</section>
{% endif %}
{% if issues_render %}
<section class='validation'>
<strong>Validation:</strong> {{ error_count }} errors, {{ warning_count }} warnings
<ul>
{% for issue in issues_render %}
<li><code>{{ issue.level }}</code> {{ issue.code }}: {{ issue.message }} <em>{{ issue.location }}</em></li>
{% endfor %}
{% if issues_extra_count > 0 %}
<li>... {{ issues_extra_count }} more issues</li>
{% endif %}
</ul></section>
{% endif %}
</header>
<section class='files'>
{% for file in files_render %}
<details class='file toc-target' id='{{ file.anchor_id }}' data-toc-id='{{ file.anchor_id }}' data-file-path='{{ file.path }}' open>
<summary class='file-header'>
<div class='file-title-row'>
<span class='file-toggle' aria-hidden='true'>▾</span>
<div class='file-path'>
{% if file.file_dir %}<div class='file-dir'>{{ file.file_dir }}/</div>{% endif %}
<div class='file-name'>{{ file.file_name }}</div>
</div>
<span class='status'>{{ file.status }}</span>
</div>
{% if file.summary_text %}<div class='summary'>{{ file.summary_text }}</div>{% endif %}
</summary>
<div class='file-body'>
{% if file.is_binary %}
<div class='summary' style='padding:0.8rem;'>Binary file changed.</div>
{% else %}
{% for hunk in file.hunks %}
<details class='hunk toc-target' id='{{ hunk.anchor_id }}' data-toc-id='{{ hunk.anchor_id }}' data-file-path='{{ file.path }}' data-hunk-id='{{ hunk.hunk_id }}' data-hunk-new-start='{{ hunk.new_start if hunk.new_start is not none else "" }}' data-hunk-new-end='{{ hunk.new_end if hunk.new_end is not none else "" }}'{% if hunk.is_open %} open{% endif %}>
<summary><span>{{ hunk.summary_label }}</span><span class='hunk-summary-meta'>+{{ hunk.added_lines }} / -{{ hunk.removed_lines }}</span></summary>
{% for note in hunk.notes %}
<section class='hunk-notes'>
{% if note.what_changed %}<p class='hunk-note-row'><strong>What changed:</strong> {{ note.what_changed }}</p>{% endif %}
{% if note.why_changed %}<p class='hunk-note-row'><strong>Why:</strong> {{ note.why_changed }}</p>{% endif %}
{% if note.reviewer_focus %}<p class='hunk-note-row'><strong>Reviewer focus:</strong> {{ note.reviewer_focus }}</p>{% endif %}
{% if note.risk %}<p class='hunk-note-row'><strong>Risk:</strong> {{ note.risk }}</p>{% endif %}
{% if note.explanation and not note.what_changed and not note.why_changed and not note.reviewer_focus and not note.risk %}
<p class='hunk-note-row'>{{ note.explanation }}</p>
{% endif %}
</section>
{% endfor %}
<div class='diff-scroll'>
<table class='diff-table'>
{% for row in hunk.rows %}
{% if row.kind == 'line' %}
<tr class='{{ row.class_name }} line-row' data-comment-trigger='line' data-file-path='{{ file.path }}' data-hunk-id='{{ hunk.hunk_id }}' data-hunk-anchor='{{ hunk.anchor_id }}' data-old-line='{{ row.old_line if row.old_line is not none else "" }}' data-new-line='{{ row.new_line if row.new_line is not none else "" }}' data-line-symbol='{{ row.symbol }}' data-line-content='{{ row.raw_content }}' data-location-key='{{ file.path }}::{{ hunk.hunk_id }}::{{ row.old_line if row.old_line is not none else "" }}::{{ row.new_line if row.new_line is not none else "" }}'><td class='num'>{{ row.old_no }}</td><td class='num'>{{ row.new_no }}</td><td class='code'><span class='diff-prefix'>{{ row.symbol }}</span>{{ row.content | safe }}</td></tr>
{% else %}
<tr class='comment-row'><td colspan='3'><div class='comment'><div class='comment-meta comment-severity-{{ row.severity }}'>{{ row.severity }}</div><div>{{ row.text }}</div></div></td></tr>
{% endif %}
{% endfor %}
</table>
</div>
</details>
{% endfor %}
{% endif %}
</div>
</details>
{% endfor %}
</section>
</div>
{% if files_render %}
<aside class='toc' aria-label='Table of contents'>
<h2 class='toc-title'>Contents</h2>
<ul class='toc-list'>
{% for file in files_render %}
<li class='toc-item'>
<a class='toc-link toc-file-link' href='#{{ file.anchor_id }}' data-toc-link='{{ file.anchor_id }}'>{{ file.toc_label }}</a>
{% if file.hunks %}
<ul class='toc-sublist'>
{% for hunk in file.hunks %}
<li><a class='toc-link toc-hunk-link' href='#{{ hunk.anchor_id }}' data-toc-link='{{ hunk.anchor_id }}'>{{ hunk.summary_label }}</a></li>
{% endfor %}
</ul>
{% endif %}
</li>
{% endfor %}
</ul>
<section class='reviewer-panel'>
<h2 class='toc-title'>Reviewer Comments</h2>
<p class='reviewer-hint'>Click a line number in the diff to add a reviewer comment.</p>
<div class='comment-actions'>
<button type='button' id='copy-agent-prompt'>Copy Agent Prompt</button>
<button type='button' id='clear-reviewer-comments'>Clear</button>
</div>
<p id='copy-status' class='copy-status' role='status' aria-live='polite'></p>
<ol id='reviewer-comment-list' class='reviewer-comment-list'></ol>
</section>
</aside>
{% endif %}
</div>
</main>
{% if embedded_json is not none %}
<script id='prereview-embedded-data' type='application/json'>{{ embedded_json | safe }}</script>
{% endif %}
{% if files_render %}
<script>
(() => {
  const links = Array.from(document.querySelectorAll("[data-toc-link]"));
  const targets = Array.from(document.querySelectorAll("[data-toc-id]"));
  if (!links.length || !targets.length) {
    return;
  }

  const embeddedNode = document.getElementById("prereview-embedded-data");
  let embeddedData = {};
  if (embeddedNode) {
    try {
      embeddedData = JSON.parse(embeddedNode.textContent || "{}");
    } catch (_error) {
      embeddedData = {};
    }
  }

  const context = embeddedData && typeof embeddedData === "object" && embeddedData.context && typeof embeddedData.context === "object"
    ? embeddedData.context
    : {};
  const targetContextId = typeof context.context_id === "string" ? context.context_id : "";
  const diffFingerprint = typeof context.diff_fingerprint === "string" ? context.diff_fingerprint : "";
  const storageKey = targetContextId && diffFingerprint
    ? `prereview-reviewer-comments:${targetContextId}:${diffFingerprint}`
    : null;

  const commentList = document.getElementById("reviewer-comment-list");
  const copyButton = document.getElementById("copy-agent-prompt");
  const clearButton = document.getElementById("clear-reviewer-comments");
  const copyStatus = document.getElementById("copy-status");
  const lineRows = Array.from(document.querySelectorAll("tr.line-row[data-location-key]"));

  let reviewerComments = [];
  let activeEditorRow = null;

  if (storageKey) {
    try {
      const raw = window.localStorage.getItem(storageKey);
      const parsed = raw ? JSON.parse(raw) : [];
      if (Array.isArray(parsed)) {
        reviewerComments = parsed.filter((comment) => comment && typeof comment === "object" && typeof comment.text === "string");
      }
    } catch (_error) {
      reviewerComments = [];
    }
  }

  const persistComments = () => {
    if (!storageKey) {
      return;
    }
    try {
      window.localStorage.setItem(storageKey, JSON.stringify(reviewerComments));
    } catch (_error) {
      // Ignore local storage failures and keep comments in-memory.
    }
  };

  const setStatus = (text) => {
    if (copyStatus) {
      copyStatus.textContent = text;
    }
  };

  const lineReference = (comment) => {
    const filePath = comment.file_path || "<unknown-file>";
    const newLine = comment.new_line || "-";
    const oldLine = comment.old_line || "-";
    return `${filePath} (new:${newLine}, old:${oldLine})`;
  };

  const buildAgentPrompt = () => {
    const lines = [
      "Address all of the following comments one by one.",
      "",
    ];

    reviewerComments.forEach((comment, index) => {
      lines.push(`${index + 1}. ${lineReference(comment)}`);
      if (comment.excerpt) {
        lines.push(`   excerpt: ${comment.excerpt}`);
      }
      lines.push(`   comment: ${comment.text}`);
      lines.push("");
    });
    return lines.join("\n").trimEnd();
  };

  const copyText = async (text) => {
    if (!text) {
      return false;
    }
    try {
      await navigator.clipboard.writeText(text);
      return true;
    } catch (_error) {
      const textarea = document.createElement("textarea");
      textarea.value = text;
      textarea.setAttribute("readonly", "readonly");
      textarea.style.position = "fixed";
      textarea.style.left = "-9999px";
      document.body.appendChild(textarea);
      textarea.select();
      const copied = document.execCommand("copy");
      document.body.removeChild(textarea);
      return copied;
    }
  };

  const removeActiveEditor = () => {
    if (activeEditorRow && activeEditorRow.parentElement) {
      activeEditorRow.parentElement.removeChild(activeEditorRow);
    }
    activeEditorRow = null;
  };

  const updateLineMarkers = () => {
    const commentedKeys = new Set(reviewerComments.map((comment) => comment.location_key).filter((key) => typeof key === "string" && key));
    lineRows.forEach((lineRow) => {
      const key = lineRow.getAttribute("data-location-key");
      lineRow.classList.toggle("has-reviewer-comment", !!(key && commentedKeys.has(key)));
    });
  };

  const renderReviewerComments = () => {
    if (!commentList) {
      return;
    }
    commentList.innerHTML = "";
    if (!reviewerComments.length) {
      const empty = document.createElement("li");
      empty.className = "reviewer-empty";
      empty.textContent = "No reviewer comments yet.";
      commentList.appendChild(empty);
      updateLineMarkers();
      return;
    }

    reviewerComments.forEach((comment, index) => {
      const item = document.createElement("li");
      item.className = "reviewer-comment-item";

      const meta = document.createElement("div");
      meta.className = "reviewer-comment-meta";
      meta.textContent = `[c${index + 1}] ${lineReference(comment)}`;
      item.appendChild(meta);

      if (comment.excerpt) {
        const excerpt = document.createElement("div");
        excerpt.className = "reviewer-comment-meta";
        excerpt.textContent = `excerpt: ${comment.excerpt}`;
        item.appendChild(excerpt);
      }

      const text = document.createElement("div");
      text.className = "reviewer-comment-text";
      text.textContent = comment.text;
      item.appendChild(text);

      const removeButton = document.createElement("button");
      removeButton.type = "button";
      removeButton.className = "reviewer-comment-remove";
      removeButton.textContent = "Remove";
      removeButton.addEventListener("click", () => {
        reviewerComments = reviewerComments.filter((candidate) => candidate.id !== comment.id);
        persistComments();
        renderReviewerComments();
      });
      item.appendChild(removeButton);
      commentList.appendChild(item);
    });

    updateLineMarkers();
  };

  const openEditorForLine = (lineRow) => {
    removeActiveEditor();

    const editorRow = document.createElement("tr");
    editorRow.className = "reviewer-editor-row";
    const editorCell = document.createElement("td");
    editorCell.colSpan = 3;

    const wrapper = document.createElement("div");
    wrapper.className = "reviewer-editor";

    const newLine = lineRow.getAttribute("data-new-line") || "-";
    const oldLine = lineRow.getAttribute("data-old-line") || "-";
    const filePath = lineRow.getAttribute("data-file-path") || "<unknown-file>";

    const meta = document.createElement("p");
    meta.className = "reviewer-editor-meta";
    meta.textContent = `${filePath} | new:${newLine} old:${oldLine}`;
    wrapper.appendChild(meta);

    const textarea = document.createElement("textarea");
    textarea.placeholder = "Write reviewer comment...";
    wrapper.appendChild(textarea);

    const actions = document.createElement("div");
    actions.className = "reviewer-editor-actions";

    const saveButton = document.createElement("button");
    saveButton.type = "button";
    saveButton.textContent = "Save";
    saveButton.addEventListener("click", () => {
      const text = textarea.value.trim();
      if (!text) {
        return;
      }
      const lineContent = (lineRow.getAttribute("data-line-content") || "").trim();
      const clippedExcerpt = lineContent.length > 177 ? `${lineContent.slice(0, 177)}...` : lineContent;
      const oldLineValue = lineRow.getAttribute("data-old-line");
      const newLineValue = lineRow.getAttribute("data-new-line");
      reviewerComments.push(
        {
          id: `c-${Date.now().toString(36)}-${Math.random().toString(36).slice(2, 8)}`,
          file_path: lineRow.getAttribute("data-file-path") || "",
          old_line: oldLineValue ? Number(oldLineValue) : null,
          new_line: newLineValue ? Number(newLineValue) : null,
          excerpt: clippedExcerpt,
          location_key: lineRow.getAttribute("data-location-key") || "",
          text,
        }
      );
      persistComments();
      renderReviewerComments();
      removeActiveEditor();
      setStatus(`Saved ${reviewerComments.length} reviewer comment(s).`);
    });
    actions.appendChild(saveButton);

    const cancelButton = document.createElement("button");
    cancelButton.type = "button";
    cancelButton.textContent = "Cancel";
    cancelButton.addEventListener("click", () => {
      removeActiveEditor();
    });
    actions.appendChild(cancelButton);

    wrapper.appendChild(actions);
    editorCell.appendChild(wrapper);
    editorRow.appendChild(editorCell);

    lineRow.insertAdjacentElement("afterend", editorRow);
    activeEditorRow = editorRow;
    textarea.focus();
  };

  if (copyButton) {
    copyButton.addEventListener("click", async () => {
      if (!reviewerComments.length) {
        setStatus("No reviewer comments to copy.");
        return;
      }
      const copied = await copyText(buildAgentPrompt());
      if (copied) {
        setStatus(`Copied prompt with ${reviewerComments.length} comment(s).`);
      } else {
        setStatus("Could not copy prompt to clipboard.");
      }
    });
  }

  if (clearButton) {
    clearButton.addEventListener("click", () => {
      if (!reviewerComments.length) {
        setStatus("No reviewer comments to clear.");
        return;
      }
      reviewerComments = [];
      persistComments();
      renderReviewerComments();
      removeActiveEditor();
      setStatus("Cleared reviewer comments.");
    });
  }

  document.addEventListener("click", (event) => {
    if (!(event.target instanceof Element)) {
      return;
    }
    const numCell = event.target.closest("td.num");
    if (!numCell) {
      return;
    }
    const lineRow = numCell.parentElement;
    if (!(lineRow instanceof HTMLTableRowElement)) {
      return;
    }
    if (!lineRow.classList.contains("line-row")) {
      return;
    }
    openEditorForLine(lineRow);
  });

  const linkById = new Map();
  for (const link of links) {
    const id = link.getAttribute("data-toc-link");
    if (!id) {
      continue;
    }
    linkById.set(id, link);
    link.addEventListener("click", () => {
      const target = document.getElementById(id);
      if (!target) {
        return;
      }
      if (target.tagName === "DETAILS") {
        target.open = true;
      }
      let parent = target.parentElement ? target.parentElement.closest("details") : null;
      while (parent) {
        parent.open = true;
        parent = parent.parentElement ? parent.parentElement.closest("details") : null;
      }
    });
  }

  const activate = (id) => {
    if (!id) {
      return;
    }
    for (const [candidate, link] of linkById.entries()) {
      link.classList.toggle("is-active", candidate === id);
    }
  };

  let ticking = false;
  const updateActive = () => {
    const marker = window.scrollY + 140;
    let current = targets[0];
    for (const target of targets) {
      if (target.offsetTop <= marker) {
        current = target;
      } else {
        break;
      }
    }
    const activeId = current.getAttribute("data-toc-id");
    if (activeId) {
      activate(activeId);
    }
    ticking = false;
  };

  const schedule = () => {
    if (ticking) {
      return;
    }
    ticking = true;
    window.requestAnimationFrame(updateActive);
  };

  window.addEventListener("scroll", schedule, { passive: true });
  window.addEventListener("resize", schedule);
  schedule();
  renderReviewerComments();
})();
</script>
